<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="ui.user.UserFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="-25dp">

        <RelativeLayout
            android:id="@+id/layoutHead"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#5CC09F">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_boy" />

            <ProgressBar
                android:id="@+id/progressbar_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="388dp"
            android:layout_height="256dp"
            android:layout_below="@id/layoutHead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:drawablePadding="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:text="" />

            <TextView
                android:id="@+id/text_not_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="9dp"
                android:text="Not Verified (Click to Verify)"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginBottom="20dp"
                android:drawablePadding="16dp"
                android:enabled="true"
                android:text="Change Password"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


        </LinearLayout>

        <Button
            android:id="@+id/logout_btn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="118dp"
            android:background="?colorPrimary"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/save_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-467dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="118dp"
            android:layout_toStartOf="@+id/logout_btn"
            android:background="?colorPrimary"
            android:text="Save Changes"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/text_firstname"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="top"
            android:layout_marginStart="49dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="454dp"
            android:layout_toEndOf="@+id/text_lastname"
            android:drawablePadding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="hihi" />

        <TextView
            android:id="@+id/text_lastname"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="top"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="455dp"
            android:drawablePadding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="haha" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>